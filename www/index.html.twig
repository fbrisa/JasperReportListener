{% extends "www/sempre.html.twig" %}

{% block title %}{{websiteTitle}}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h2>{{websiteTitle}} - {{version}}</h2>
                <h4>Running since <span>{{runningSince|date('d/m/Y h:m:s')}}</span></h4>
                <h5>Total time: <span>{{runningTime}}</span></h5>
            </div>
            <div class="col-md-4">
                <img src="/home.svg" style="width: 100%;">
                {#<div style="background-size: auto;background-repeat: no-repeat ;background-image: url(report.svg);width: 100px;height: 100px;"></div>#}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
            </div>
        </div>
    </div>
{% endblock %}